using System;

namespace SNX
{
    class SNX
    {
        static void Main(string[] args)
        {
            int n = 0, x = 0;
            decimal result = 0.0m;

            n = tryParse(n);
            x = tryParse(x);

            for(int i = 0; i < n; i++)
            {
                result += (decimal)(factoriel(n) / Math.Pow(x, n));
            }

            Console.WriteLine($"{result:F4}");
        }

        static int tryParse(int num)
        {
            bool tryParse = false;

            do
            {
                Console.Write("Enter a value: ");
                tryParse = int.TryParse(Console.ReadLine(), out num);
                if (tryParse == true)
                {
                    return num;
                }
                else
                {
                    Console.WriteLine("Try again!");
                }
            } while (tryParse == false);

            return 1;
        }

        static int factoriel(int num)
        {
            int factoriel = 1;
            do
            {
                factoriel *= num;
                num--;

            }
            while (num > 0);
            return factoriel;
        }
    }
}
